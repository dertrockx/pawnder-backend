{
	"compilerOptions": {
		"lib": ["es5", "es6"],
		"target": "es5",
		"module": "commonjs",
		"moduleResolution": "node",
		"esModuleInterop": true,
		"outDir": "./build",
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"sourceMap": true,
		"resolveJsonModule": true,
		"baseUrl": "src",
		"paths": {
			"@endpoints": ["endpoints/"],
			"@handlers": ["handlers/"],
			"@models": ["models/"],
			"@decorators": ["decorators/"],
			"@tests": ["tests/"],
			"@constants": ["constants/"],
			"@utils": ["utils/"],
			"@middlewares": ["middlewares/"]
		}
	}
}
